<%= form_for post do |f| %>
<%= f.label :title %>
<%= f.text_field :title %><br>
<%= f.label :content %>
<%= f.text_field :content %><br>
<%= f.label :categories %><br>
<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
<%= f.fields_for :categories, post.categories.build do |categories_field| %>
<%= categories_field.label :name, "New Category" %>
<%= categories_field.text_field :name %><br>
<% end %>
<%= f.submit %>
<% end %>
