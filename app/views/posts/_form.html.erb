
<%= form_for post do |f| %>
<%= f.label "Title" %> <br>
<%= f.text_field :title %>
<hr>
<br>
<%= f.label "Content" %> <br>
<%= f.text_area :content %> 
<br>
<hr>
<br>
<%= f.label "Select a category or create a new one" %> <br>
<br>
<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %> <br>
<br>
<%= f.fields_for :categories, post.categories.build do |categories_fields| %>
  <%= categories_fields.text_field :name %>
<% end %>
<hr>
<br>
<%= f.submit %>
<% end %>